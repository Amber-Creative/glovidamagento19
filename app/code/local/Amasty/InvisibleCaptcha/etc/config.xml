<config>
    <modules>
        <Amasty_InvisibleCaptcha>
            <version>1.1.1</version>
        </Amasty_InvisibleCaptcha>
    </modules>
    <global>
        <helpers>
            <aminvisiblecaptcha>
                <class>Amasty_InvisibleCaptcha_Helper</class>
            </aminvisiblecaptcha>
        </helpers>
        <blocks>
            <aminvisiblecaptcha>
                <class>Amasty_InvisibleCaptcha_Block</class>
            </aminvisiblecaptcha>
        </blocks>
        <models>
            <aminvisiblecaptcha>
               <class>Amasty_InvisibleCaptcha_Model</class>
            </aminvisiblecaptcha>
        </models>
        <events>
            <controller_action_predispatch>
                <observers>
                    <ampredispatch>
                        <class>Amasty_InvisibleCaptcha_Model_Observer</class>
                        <method>handleControllers</method>
                    </ampredispatch>
                </observers>
            </controller_action_predispatch>
        </events>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Amasty_InvisibleCaptcha>
                    <files>
                        <default>Amasty_InvisibleCaptcha.csv</default>
                    </files>
                </Amasty_InvisibleCaptcha>
            </modules>
        </translate>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <aminvisiblecaptcha translate="title" module="aminvisiblecaptcha">
                                            <title>Google Invisible Captcha</title>
                                        </aminvisiblecaptcha>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <frontend>
        <translate>
            <modules>
                <Amasty_InvisibleCaptcha>
                    <files>
                        <default>Amasty_InvisibleCaptcha.csv</default>
                    </files>
                </Amasty_InvisibleCaptcha>
            </modules>
        </translate>
        <layout>
            <updates>
                <aminvisiblecaptcha>
                    <file>amasty/aminvisiblecaptcha.xml</file>
                </aminvisiblecaptcha>
            </updates>
        </layout>
    </frontend>
    <default>
        <aminvisiblecaptcha>
            <general>
                <enabledCaptcha>0</enabledCaptcha>
                <captchaKey></captchaKey>
                <captchaSecret></captchaSecret>
                <captchaUrls><![CDATA[customer/account/createpost
newsletter/subscriber/new
customer/account/loginPost
review/product/post
]]></captchaUrls>
                <captchaSelectors><![CDATA[form[action*="customer/account/createpost"]
form[action*="newsletter/subscriber/new"]
form[action*="customer/account/loginPost"]
form[action*="review/product/post"]
]]></captchaSelectors>
                <badge_position>bottomright</badge_position>
                <badge_styles></badge_styles>
            </general>
        </aminvisiblecaptcha>
    </default>
</config>
